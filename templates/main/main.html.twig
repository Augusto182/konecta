{% extends 'base.html.twig' %}
{% block title %}Konecta | Product List{% endblock %}
{% block body %}

<div class="main">
    <div class="container">
        <h1>Konecta | Product List</h1>

        <a href="{{ path('create_product')}}" class="btn btn-primary">ADD PRODUCT</a>

        <table class="table" border>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Reference</th>
                    <th>Price</th>
                    <th>Weight</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.reference }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.weight }}</td>
                        <td>{{ product.category }}</td>
                        <td>{{ product.stock }}</td>
                        <td>
                            <a href="{{ path('sale_product', {'id': product.id}) }}" class="btn btn-primary">Sale</a>
                            <a href="{{ path('edit_product', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
                            <a href="{{ path('delete_product', {'id': product.id}) }}" class="btn btn-primary">X</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="container">
      <h2>Largest stock</h2>
      {{ largest_stock.product }}: {{ largest_stock.value }}
    </div>

    <div class="container">
      <h2>Best selling</h2>
      {{ best_selling.product }}: {{ best_selling.value }}
    </div>

</div>
{% endblock %}

